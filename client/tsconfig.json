{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@shared/*": ["../shared/*"]
    },
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "config"
  ]
}

